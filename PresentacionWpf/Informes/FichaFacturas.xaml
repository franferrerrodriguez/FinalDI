<UserControl x:Class="PresentacionWpf.FichaFacturas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentacionWpf"
             mc:Ignorable="d" Width="1070" Height="842">
    <Grid Name="GridFichaFacturas">
        <Grid.Background>
            <SolidColorBrush Color="#FFF0F0F0"/>
        </Grid.Background>
        <Label Name="labelTitle" HorizontalAlignment="Left" Margin="44,10,0,0" VerticalAlignment="Top" FontSize="36" Width="400"/>
        <DocumentViewer x:Name="_viewer" Margin="0,80,0,10"/>
        <Grid x:Name="Botonera">
            <Button Name="btnImprimir" Content="Imprimir" RenderTransformOrigin="1.707,1.824" Height="Auto" Margin="806,30,164,780" Click="BtnImprimir_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="924,30,0,0" VerticalAlignment="Top" Width="100" Click="BtnCancelar_Click"/>
            <Button x:Name="btnBuscarFactura" Content="Buscar Factura"  RenderTransformOrigin="1.707,1.824" Height="Auto" Margin="664,30,282,780" Click="BtnBuscarFactura_Click"/>
        </Grid>
    </Grid>
</UserControl>