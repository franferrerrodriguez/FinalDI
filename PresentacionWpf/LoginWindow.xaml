        </Button>
        <TextBox x:Name="textBoxLoginUser" HorizontalAlignment="Left" Height="27" Margin="325,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" FontSize="16" Background="Transparent" BorderBrush="{x:Null}" Foreground="#FFBABABA" Text="Email"/>
