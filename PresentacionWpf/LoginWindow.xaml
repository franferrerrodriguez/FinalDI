        <Button Height="25" VerticalAlignment="Top" Width="25" Margin="765,4,9.667,0" Click="Button_Close" Cursor="Hand" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/window_close.png"/>
            </Button.Background>
        </Button>
        <Button Height="25" VerticalAlignment="Top" Width="25" Margin="727,4,47.667,0" Click="Button_Minimize" Cursor="Hand" BorderBrush="{x:Null}" Foreground="{x:Null}">
