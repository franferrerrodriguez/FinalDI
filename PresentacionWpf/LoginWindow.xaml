        xmlns:local="clr-namespace:PresentacionWpf"
        mc:Ignorable="d"
        Title="LoginWindow" Height="361.531" Width="800" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
